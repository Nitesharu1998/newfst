<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.example.trial_fst0763.Payments">


    <ImageView
        android:id="@+id/payment_movie_image"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:src="@mipmap/ic_launcher"
        />

    <TextView
        android:text="sample movie name"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:id="@+id/payment_movie_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"/>

    <TextView

        android:layout_marginTop="10dp"
        android:text="sample movie seats"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:id="@+id/payment_movie_seats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView

        android:layout_marginTop="10dp"
        android:text="sample movie seats"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:id="@+id/payment_movie_pay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/payment"
        android:textSize="20dp"
        style="@style/Widget.MaterialComponents.FloatingActionButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Pay" />


</LinearLayout>